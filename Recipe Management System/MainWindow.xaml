<Window x:Class="Recipie_Management_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Recipie_Management_System"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Recipe Management System" FontWeight="Bold" FontSize="14" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Height="42" Margin="0,19,0,0" VerticalAlignment="Top" Width="216"/>
        <TextBlock TextWrapping="WrapWithOverflow" Margin="292,66,292,0" Height="59" VerticalAlignment="Top" TextAlignment="Center">Welcome to the recipe management system, please login.</TextBlock>
        <TextBox Name="UsernameTextBox" HorizontalAlignment="Left" Height="30" Margin="346,130,0,0" Text="Username" Foreground="Gray" TextWrapping="Wrap" VerticalAlignment="Top" Width="114"/>
        <TextBox Name="PasswordTextBox" HorizontalAlignment="Left" Height="26" Margin="346,175,0,0" Text="Password" Foreground="Gray" TextWrapping="Wrap" VerticalAlignment="Top" Width="114"/>
        <Button Content="Login" Click="loginClick" HorizontalAlignment="Left" Margin="499,175,0,0" VerticalAlignment="Top" Height="26"/>

    </Grid>
</Window>
